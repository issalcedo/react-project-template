{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "baseUrl": ".",
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
  }
}